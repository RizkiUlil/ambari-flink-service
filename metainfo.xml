<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>FLINK</name>
            <displayName>Flink</displayName>
            <comment>Apache Flink is a streaming dataflow engine that provides data distribution, communication, and fault tolerance for distributed computations over data streams.</comment>
            <version>1.7.2</version>
            <components>
                <component>
                  <name>FLINK_MASTER</name>
                  <displayName>Flink</displayName>
                  <category>MASTER</category>
                  <cardinality>1</cardinality>
                  <commandScript>
                    <script>scripts/flink.py</script>
                    <scriptType>PYTHON</scriptType>
                    <timeout>10000</timeout>
                  </commandScript>
                </component>
            </components>
            <osSpecifics>
                <osSpecific>
                    <osFamily>debian7,ubuntu12,ubuntu14</osFamily>
                    <packages>
                      <package>
                          <name>python2.7-dev</name>
                      </package>
                      <package>
                          <name>jq</name>
                      </package>
                      <package>
                          <name>curl</name>
                      </package>
                      <package>
                          <name>net-tools</name>
                      </package>
                      <package>
                          <name>openjdk-8-jdk</name>
                      </package>
                    </packages>
                </osSpecific>
                <osSpecific>
                    <osFamily>redhat7,redhat6,redhat5,centos6,centos7</osFamily>
                    <packages>
                      <package>
                          <name>python-devel</name>
                      </package>
                      <package>
                          <name>jq</name>
                      </package>
                      <package>
                          <name>curl</name>
                      </package>
                      <package>
                          <name>net-tools</name>
                      </package>
                      <package>
                          <name>centos-release-SCL</name>
                      </package>
                      <package>
                          <name>python27</name>
                      </package>
                      <package>
                          <name>java-1.8.0-openjdk</name>
                      </package>
                    </packages>
                </osSpecific>
            </osSpecifics>
      	    <configuration-dependencies>
	        	<config-type>flink-ambari-config</config-type>      	   
      	    </configuration-dependencies>
            <restartRequiredAfterChange>false</restartRequiredAfterChange>
        </service>
    </services>
</metainfo>
